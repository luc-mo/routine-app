{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "application": ["/application/*", "/application"],
      "domain": ["/domain/*", "/domain"],
      "infrastructure": ["/infrastructure/*", "/infrastructure"],
      "types": ["/types/*", "/types"]
    },
    "moduleResolution": "node",
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*",
    "./vitest.config.ts"
  ]
}
